{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}

<h4>Nova postagem:</h4>
<div class="card">
    <div class="card-body">
        <form action="/admin/postagens/nova" method="POST">
            <label for="titulo">Título: </label>
            <input type="text" name="titulo" class="form-control" required>

            <label for="slug">Slug: </label>
            <input type="text" name="slug" id: "slug_id" class="form-control">

            <label for="descricao">Descrição: </label>
            <input type="text" name="descricao" class="form-control">
            
            <label for="categoria">Categoria: </label>
            <select name="categoria" id="categoria_id" class="custom-select">
                {{#each categorias}}
                    <option value="{{_id}}">{{nome}}</option>
                {{else}}
                    <option value="0">nenhuma categoria encontrada</option>
                {{/each}}
            </select>

            <label for="conteudo">Conteúdo: </label>
            <textarea name="conteudo" class="form-control"></textarea>

            <button type="submit" class="btn btn-success mt-4">Criar postagem</button>

        </form>
    </div>

</div>
