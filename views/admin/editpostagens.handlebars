{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}

<h4>Editar postagem:</h4>
<div class="card">
    <div class="card-body">
        <form action="/admin/postagens/edit" method="POST">
            <input type="hidden" name="id" value="{{postagem._id}}">
            <label for="titulo">Título: </label>
            <input type="text" name="titulo" class="form-control" value="{{postagem.titulo}}" required>

            <label for="slug">Slug: </label>
            <input type="text" name="slug" id: "slug_id" class="form-control" value=" {{postagem.slug}}" required>

            <label for="descricao">Descrição: </label>
            <input type="text" name="descricao" class="form-control" value="{{postagem.descricao}}" required>
            
            <label for="categoria">Categoria: </label>
            <select name="categoria" id="categoria_id" class="custom-select">
                {{#each categorias}}
                    <option value="{{_id}}">{{nome}}</option>
                {{else}}
                    <option value="0">nenhuma categoria encontrada</option>
                {{/each}}
            </select>

            <label for="conteudo">Conteúdo: </label>
            <textarea name="conteudo" class="form-control"> {{postagem.conteudo}} </textarea>

            <button type="submit" class="btn btn-success mt-4">Editar postagem</button>

        </form>
    </div>

</div>
