{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}

<h4>Pagina de usuario:</h4>
{{Titulo}}
<div class="card">
    <div class="card-body">
        <form action="/usuario/registros" method="POST">
            <label for="usuario">Usuario:</label>
            <input type="text" name="usuario" id="usuario_id" class="form-control" required>

            <label for="email">Email:</label>
            <input type="email" name="email" id="email_id" class="form-control" required>

            <label for="senha">Senha:</label>
            <input type="password" name="senha" id="senha_id" class="form-control" required>

            <label for="senha2">Repita sua senha:</label>
            <input type="password" name="senha2" id="senha2_id" class="form-control" required>
            <button type="submit" class="btn btn-success mt-3" >Criar registro</button>
        </form>
    </div>
</div>
